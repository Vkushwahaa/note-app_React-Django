{
  "version": 2,
  "builds": [
    {
      "src": "note_app/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "installCommand": ""
      }
    },
    {
      "src": "frontend_note-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm install && npm run build",
        "routes": [
          { "src": "/assets/(.*)", "dest": "dist/assets/$1" },
          { "src": "/index-(.*)", "dest": "dist/index.html" },
          { "src": "/(.*)", "dest": "dist/$1" }
        ]
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "note_app/wsgi.py" },
    { "src": "/assets/(.*)", "dest": "dist/assets/$1" }
  ]
}
