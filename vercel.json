{
  "version": 2,
  "builds": [
    {
      "src": "note_app/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "Python3.11",
        "installCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
      }
    },
    {
      "src": "frontend_note-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../static",
        "buildCommand": "npm install && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "note_app/wsgi.py" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "note_app.settings",
    "SECRET_KEY": "your-secret-key-here"
  }
}
