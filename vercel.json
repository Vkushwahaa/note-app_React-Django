{
  "version": 2,
  "builds": [
    {
      "src": "frontend_note-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../static",
        "buildCommand": "npm install && npm run build"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "note_app/wsgi.py" }
  ]
}
